<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blogo"
    tools:context=".ScrollImagesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/post_idea"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="+ Post Idea"
                android:textSize="20dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/view_idea"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="View Posted Ideas"
                android:textSize="20dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/mentor"
                android:contentDescription="mentor image"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onImageClick"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentorship Opportunities"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/finance"
                android:contentDescription="finance image"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onImageClick"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="133dp"
                android:text="Financial Banking"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:contentDescription="expert image"
                android:layout_height="270dp"
                android:src="@drawable/expert"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onImageClick"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert Advice"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginLeft="145dp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:contentDescription="connectin image"
                android:src="@drawable/connectinn"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onImageClick"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting Innovators"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="15dp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:contentDescription="invest image"
                android:src="@drawable/investor"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onImageClick"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investors Engagement"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="15dp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:contentDescription="invest image"
                android:src="@drawable/virtpe"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="onImageClick"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Virtual Pitch Events"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="15dp"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
